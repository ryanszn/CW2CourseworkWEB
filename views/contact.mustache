<body>
    <!-- Header section with logo and page title -->
    <header class="header">
        <img src="/charityLogo.png" alt="Charity Hospice Logo"> <!-- Correct path to the image -->
        <h1>Contact Us</h1> <!-- Page heading -->
        <!-- Back button aligned to the right -->
        <a href="/" class="btn btn-secondary">Back</a> <!-- Updated link to root -->
    </header>
    
    <!-- Main content area -->
    <main>
        <div class="container">
            <!-- Contact form -->
            <form id="contactForm" method="post" action="/views/send_email.php">
                <div class="form-group">
                    <label for="name">Your Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                </div>
                <div class="form-group">
                    <label for="email">Your Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" placeholder="Enter your message" required></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </main>

    <!-- Bootstrap JavaScript dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom JavaScript for form submission -->
    <script>
        document.getElementById('contactForm').addEventListener('submit', function(event) {
            // Prevents the default form submission behavior
            event.preventDefault();

            // Creates a FormData object from the form
            var formData = new FormData(this);

            // Sends the form data to the server using Fetch API
            fetch('send_email.php', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Success message if the email was sent
                    alert('Thank you for your message. We will get back to you soon.');
                    // You can redirect to a thank you page or another action here
                } else {
                    // Failure message if the email was not sent
                    alert('Failed to send message. Please try again later.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An unexpected error occurred. Please try again later.');
            });
        });
    </script>
</body>
